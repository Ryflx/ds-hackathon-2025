{
  "manifest_version": 3,
  "name": "Demo Configuration Tool",
  "version": "1.0",
  "description": "A modern Chrome extension for configuring IAM and CLM demos",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Demo Configuration Tool"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 